{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "quotes": ["error", "single"],
        "max-len": ["error", { "code": 120, "tabWidth": 4 }],
        
        "semi": ["error", "always"]
    }
}
